<div id="sheet" class="w-full h-full p-8 bg-crust font-mono">
    <h1 class="text-5xl mb-12 text-text text-center underline underline-offset-8"><%= title %></h1>
    <div class="columns-3 gap-8 space-y-8">
        <% categories.forEach((category) => { %>
            <div class="bg-mantle break-inside-avoid-column">
                <div class="flex items-center">
                    <div class="mx-auto bg-pink py-2 px-3 inline-block">
                        <p class="text-mantle"><%= category.name %></p>
                    </div>
                </div>
                <div class="p-5 space-y-5">
                    <% category.binds.forEach((bind) => { %>
                        <div class="flex justify-between text-text">
                            <p class="text-left"><%= bind.description %></p>
                            <p class="text-right"><%= bind.key %></p>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% }); %>
    </div>
</div>